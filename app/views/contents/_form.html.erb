<% if content.errors.any? %>
  Errors: <%= content.errors.full_messages.join(", ") %><br><br>
<% end %>

<%= form_with(model: content, local: true) do |form| %>
  <div class="col-auto form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  
  <div class="col-auto form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="col-auto form-group">
    <%= form.label :tags, class: "form-label" %>
    <%= form.select :tags, options_for_select(current_user.tags.pluck(:name), content.tags.pluck(:name)), {}, { class: "select2 form-control", multiple: "multiple", style: "width: 100%" } %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>